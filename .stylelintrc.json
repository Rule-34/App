{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-recommended", "stylelint-prettier/recommended"],
  "rules": {
    "at-rule-no-unknown": [
      null,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
    "scss/at-rule-no-unknown": true
  }
}
