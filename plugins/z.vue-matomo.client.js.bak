import VueMatomo from 'vue-matomo'
import { defineNuxtPlugin } from 'nuxt/app'

export default defineNuxtPlugin((nuxtApp) => {
	const { vueApp, $config } = nuxtApp

	vueApp.use(VueMatomo, {
		host: $config.public.MATOMO_HOST,

		siteId: $config.public.MATOMO_SITE_ID,

		// trackerUrl: '',

		// trackerScriptUrl: '',

		// router: vueApp.router,

		disableCookies: true,

		enableHeartBeatTimer: false,

		debug: $config.public.NODE_ENV === 'development'

		// preInitActions: [],
	})
})
